<%- include('header') -%>

<main>
  <h1>Fræðslumyndbandaleigan</h1>
  <div class='grid'>
    <section class='video row'>
      <% data.categories.forEach((category) => { %>
        <h2 class='col'><%= category.title %></h2>
        <% category.videos.forEach((videoid) => { %>
          <div class='col col-4 col-12-sm video-card'>
            <a href='<%= 'videos/' + videoid %>'>
            <div class='video-thumbnail'>
              <img class='video-image' src='.<%= data.videos[videoid-1].poster %>'>
              <div class='video-timestamp'><%= locals.timeStamp(data.videos[videoid-1].duration) %></div>
            </div>
            <div class='video-info'>
              <h3 class='video-name'><%= data.videos[videoid-1].title %></h3>
              <p class='video-uploadtime'><%= locals.formatTime(data.videos[videoid-1].created) %></p>
            </div>
          </a>
          </div>
        <% }) %>
        <hr class='video-linebrake'>
      <% }) %>
    </section>
  </div>
</main>
<%- include('footer') -%>
